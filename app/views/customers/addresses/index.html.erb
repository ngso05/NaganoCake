<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>配送先登録 / 一覧</h2>
      <%= form_with model: @address, url: customers_addresses_path, method: :post, local:true do |f| %>
      <div class="field">
      <h4>郵便番号(ハイフンなし)</h4>
      <%= f.text_field :postal_code %>

      <h4>住所</h4>
      <%= f.text_field :address %>

      <h4>宛名</h4>
      <%= f.text_field :name %>
      <%= f.submit '新規登録' %>
      <% end %>
      <table class="table">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_customers_address_path(address), class: "glyphicon glyphicon-pencil btn btn-success pull-right" %>
              <%= link_to "削除する", customers_address_path(address), method: :delete, class: "glyphicon glyphicon-pencil btn btn-danger pull-right" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>