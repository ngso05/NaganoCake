<div class="container">
  <div class="row">
    <h2>注文履歴一覧</h2>

    <table>
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.delivery_address %></td>
          <td>
            <% order.order_details.each do |od| %>
            <%= od.item.name %>
            <% end %>
          </td>
          <td><%= (order.total_price + 800).to_s(:delimited, delimiter: ',') %></td>
          <td><%= order.order_status %></td>
          <td><%= link_to "表示する", customers_order_path(order), class: "glyphicon glyphicon-zoom-in btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>