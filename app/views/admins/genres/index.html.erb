<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>ジャンル一覧・追加</h2>
      <%= form_with model: [:admins, @genre], local:true do |f| %>
      <h4>ジャンル名</h4>
      <%= f.text_field :name %>
      <%= f.submit '新規登録' %>
      <% end %>
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td><%= link_to "編集する", edit_admins_genre_path(genre), class: 'btn btn-default' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>