<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>商品新規登録</h2>
      <!-- form_with部分 -->
      <%= form_with model: [:admins, @item], local:true do |f| %>
      <h4>商品画像</h4>
      <div class="field">
      <%= f.attachment_field :image %>
      <h4>商品名</h4>
      <%= f.text_field :name %>

      <h4>商品説明</h4>
      <%= f.text_area :introduction %>

      <div class="genre_id_field">
        <%= f.label :genre_id, "ジャンル" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
      </div>

      <h4>税抜価格</h4>
      <%= f.text_field :price %>円<br>

      <div class="is_active_field">
      <%= f.radio_button :is_active, :販売中 %>
      <%= f.label :is_active, '販売中' %>
      <%= f.radio_button :is_active, :販売停止中 %>
      <%= f.label :is_active, '販売停止中' %>
      </div>
      <%= f.submit '新規登録' %>
      <% end %>
    </div>
  </div>
</div>
