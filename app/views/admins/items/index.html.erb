<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>商品一覧</h2>
      <div class="text-right">
        <%= link_to "新規登録" , new_admins_item_path, class:"btn btn-lg btn-primary" %>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to admins_item_path(item), class: "btn-link" do %>
                <%= item.name %>
                <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.is_active %></td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>
