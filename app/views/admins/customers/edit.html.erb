<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2><%= @customer.last_name %><%= @customer.first_name %>会員情報編集</h2>
      <!-- form_with部分 -->
      <div class="field">
      <p>会員ID          <%= @customer.id %></p><br>
      </div>
      <%= form_with model: [:admins, @customer], local:true do |f| %>
      <h4>氏名</h4>
      <div class="field">
      <%= f.text_field :last_name %><%= f.text_field :first_name %>

      <h4>フリガナ</h4>
      <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>

      <h4>郵便番号</h4>
      <%= f.text_field :postal_code %>

      <h4>住所</h4>
      <%= f.text_field :address %>

      <h4>電話番号</h4>
      <%= f.text_field :telephone_number %>

      <h4>メールアドレス</h4>
      <%= f.text_field :email %>

      <div class="is_active_field">
      <%= f.radio_button :is_active, :有効 %>
      <%= f.label :is_active, '有効' %>
      <%= f.radio_button :is_active, :退会 %>
      <%= f.label :is_active, '退会' %>
      </div>

      <%= f.submit '変更を保存' %>
      <% end %>
    </div>
  </div>
</div>
